<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="add-table-usergames" author="belatry">
        <createTable tableName="usergames">
            <column autoIncrement="true" name="id" type="int">
                <constraints primaryKey="true" primaryKeyName="usergames_pkey"/>
            </column>

            <column name="userid" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="hiddenword" type="varchar(255)"/>

            <column name="round" type="int"/>

            <column name="gamestate" type="varchar(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>